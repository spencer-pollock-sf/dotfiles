#!/bin/bash

if [ ! -d ~/Documents ]; then
   mkdir ~/Documents
fi
if [ ! -d ~/Downloads ]; then
    mkdir ~/Downloads
fi
if [ ! -d ~/Downloads ]; then
    mkdir ~/Media
fi

./.dotfile_scripts/backup_dotfiles

os=${OSTYPE//[0-9.-]*/}
case "$os" in
    darwin)
        ./.dotfile_scripts/mac_setup
      ;;
    msys)
        echo "Windows not supported"
      ;;
    linux)
        ./.dotfile_scripts/linux_setup
      ;;
    *)
    echo "Unknown OS $OSTYPE"
    exit 1
esac

case "$SHELL" in
    bash)
        source ~/.bashrc
        ;;
    zsh)
        source $HOME/.zshrc
        ;;
    *)
    printf "Unknown shell $SHELL"
    exit
esac
